version: '3.8'

services:
  db:
    # Use the official MySQL image
    image: mysql:8.0
    # Set environment variables for the MySQL root password and the WordPress database
    environment:
      MYSQL_ROOT_PASSWORD: your_root_password # Change this!
      MYSQL_DATABASE: wordpress_db
      MYSQL_USER: wp_user
      MYSQL_PASSWORD: wp_password # Change this!
    # Map port 3306 on the host to port 3306 in the container (optional, for direct access)
    # ports:
    #   - "3306:3306"
    # Create a persistent volume for the database data
    volumes:
      - db_data:/var/lib/mysql
    # Ensure the database is ready before WordPress starts (recommended)
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      timeout: 5s
      retries: 5

  wordpress:
    # Use the official WordPress image
    image: wordpress:latest
    # Map port 80 on the host machine to port 80 in the container
    ports:
      - "8080:80" # Access WordPress at http://localhost:8080
    # Set environment variables for WordPress to connect to the 'db' service
    environment:
      # Use the service name defined above ('db') as the hostname
      WORDPRESS_DB_HOST: db:3306
      WORDPRESS_DB_USER: wp_user
      WORDPRESS_DB_PASSWORD: wp_password
      WORDPRESS_DB_NAME: wordpress_db
    # Wait for the 'db' service to be healthy before starting
    depends_on:
      db:
        condition: service_healthy
    # Create a persistent volume for WordPress files (themes, plugins, uploads)
    volumes:
      - wp_content:/var/www/html/wp-content

# Define persistent volumes
volumes:
  db_data:
  wp_content:
