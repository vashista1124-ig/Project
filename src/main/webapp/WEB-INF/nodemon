version: "3.8"

services:
  node-server:
    image: node:18
    command: >
      node -e "require('http')
        .createServer((req,res)=>res.end('Node server running'))
        .listen(3000);"
    ports:
      - "3000:3000"
    depends_on:
      - mongo

  mongo:
    image: mongo:latest
    ports:
      - "27017:27017"
    volumes:
      - mongo_data:/data/db

volumes:
  mongo_data:
